generator client {
  provider = "prisma-client-js"
}

generator typebox {
  provider = "prisma-typebox-generator"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(cuid())
  username String @unique

  pubkey      String // this is a master pubkey derived from user's password
  keyPairSalt String

  srpVerifier         String  @db.Char(1024)
  srpSalt             String  @db.Char(64)

  srpServerPrivateKey String? @db.Char(1024)
  srpClientPublicKey  String? @db.Char(1024)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
