{
  "name": "shrimp",
  "description": "All-in-one email service, fully encrypted and self-hostable.",
  "workspaces": [
    "./client",
    "./server",
    "./packages/landing-page"
  ],
  "packageManager": "bun@1.1.0",
  "scripts": {
    "dev": "turbo dev --filter=@shrimp/client --filter=@shrimp/server",
    "dev:landing": "turbo dev --filter=landing-page",
    "build": "turbo build",
    "lint": "turbo lint",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.0.0",
    "@commitlint/config-conventional": "^19.0.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "turbo": "^1.12.4"
  }
}
